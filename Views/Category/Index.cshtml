@* Read the model received from Model through controller  *@
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<h1>Category</h1>
<p>Categories list to be updated soon...</p>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.DisplayOrder
                </td>
                <td width="20%">
                    @obj.CreatedOn
                </td>
            </tr>
        }
    </tbody>
</table>