@* Read the model received from Model through controller  *@
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<h1>Category</h1>
@* <p>Categories list to be updated soon...</p> *@

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle p-1"></i> Create New Category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.DisplayOrder
                    </td>
                    <td width="20%">
                        @obj.CreatedOn
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>
