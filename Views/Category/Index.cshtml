@* Read the model received from Model through controller  *@
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<h1>Category</h1>
@* <p>Categories list to be updated soon...</p> *@

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle p-1"></i> Create New Category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
            <th>
                Modify Category
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.DisplayOrder
                    </td>
                    <td width="20%">
                        @obj.CreatedOn
                    </td>
                    <td >
                        <div class="w-75 btn-group" role="group">
                            @* class="btn btn-success mx-2 w-10" *@
                            <a class="btn btn-outline-success mx-2 w-5" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square p-2 "></i>Edit</a>
                            @* Below for delete action having GET and POST methods *@
                            @* <a class="btn btn-danger mx-2 w-10" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"> *@
                            @* <i class="bi bi-trash p-2"></i>Delete</a> *@
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-warning">
                                <i class="bi bi-trash p-2"></i>Delete
                            </button>
                            @* <button type="submit" class="btn btn-danger mx-2 w-10">
                                <i class="bi bi-trash p-2"></i> Delete
                            </button> *@
                            </form>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>
